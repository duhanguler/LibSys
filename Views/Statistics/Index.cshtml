<div class="container">
    <h1 class="my-4">Library Statistics</h1>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Resources</h5>
                    <p class="card-text">@ViewBag.TotalResources</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Inventory Items</h5>
                    <p class="card-text">@ViewBag.TotalInventoryItems</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Borrowed Items</h5>
                    <p class="card-text">@ViewBag.BorrowedItems</p>
                </div>
            </div>
        </div>
    </div>
</div>
