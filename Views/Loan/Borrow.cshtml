@model LibSys.Models.Resource

<h1>Borrow Resource</h1>

<form asp-controller="Loan" asp-action="Borrow" method="post">
    <h4>Title: @Model.Title</h4>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Loan Period (in days):</label>
        <input type="number" name="LoanPeriod" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Borrow</button>
</form>

<p>
    <a asp-action="Index">Back to List</a>
</p>
