@model LibSys.Models.Inventory

<div class="container">
    <h1 class="mt-4 mb-3">Edit Inventory</h1>

    <form asp-controller="Inventory" asp-action="Edit" method="post" class="mb-3">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Id" class="form-label">ID:</label>
            <input asp-for="Id" class="form-control" disabled />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Resource:</label>
            <input type="text" class="form-control" readonly value="@ViewBag.ResourceTitle" />
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label">Quantity:</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <!-- Diğer özellikler -->

        <button type="submit" class="btn btn-primary">Save</button>
    </form>

    <p>
        @Html.ActionLink("Back to List", "Details", "Resource", new { id = Model.ResourceId }, new { @class = "btn btn-secondary" })
    </p>
</div>
