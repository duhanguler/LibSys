@model LibSys.Models.Inventory

<div class="container">
    <h1 class="mt-4 mb-3">Delete Inventory</h1>

    <div class="card mb-3">
        <div class="card-body">
            <h4 class="card-title">ID: @Model.Id</h4>
            <h4 class="card-title">Resource: @Model.Resource.Title</h4>
            <h4 class="card-title">Quantity: @Model.Quantity</h4>
            <!-- Diğer özellikler -->
        </div>
    </div>

    <form asp-controller="Inventory" asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>

    <p class="mt-4">
        @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
    </p>
</div>
